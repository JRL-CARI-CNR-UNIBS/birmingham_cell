<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="hand">
  <xacro:macro name="hand" params="connected_to:='' ns:='' rpy:='0 0 0' xyz:='0 0 0' ">
    <xacro:unless value="${connected_to == ''}">
      <joint name="${ns}_hand_joint" type="fixed">
        <parent link="${connected_to}"/>
        <child link="${ns}_hand"/>
        <origin xyz="${xyz}" rpy="${rpy}"/>
      </joint>
    </xacro:unless>

    <link name="${ns}_hand">
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0.04"/>
        <mass value=".81"/>
        <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
      </inertial>
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://birmingham_cell_description/meshes/hand.STL"/>
        </geometry>
        <material name="">
          <color rgba="1 1 1 1"/>
        </material>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://birmingham_cell_description/meshes/hand_collision.STL"/>
        </geometry>
      </collision>
    </link>
    <link name="${ns}_leftfinger">
      <contact>
        <friction_anchor/>
        <stiffness value="30000.0"/>
        <damping value="1000.0"/>
        <spinning_friction value="0.1"/>
        <lateral_friction value="1.0"/>
      </contact>
      <inertial>
        <origin rpy="0 0 0" xyz="0 0.01 0.02"/>
        <mass value="0.1"/>
        <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
      </inertial>
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://birmingham_cell_description/meshes/leftfinger.STL"/>
        </geometry>
        <material name="">
          <color rgba="1 1 1 1"/>
        </material>
      </visual>
      <!-- <collision> -->
      <collision concave="yes">
        <geometry>
          <mesh filename="package://birmingham_cell_description/meshes/leftfinger_collision.STL"/>
        </geometry>
      </collision>
    </link>
    <link name="${ns}_rightfinger">
      <contact>
        <friction_anchor/>
        <stiffness value="30000.0"/>
        <damping value="1000.0"/>
        <spinning_friction value="0.1"/>
        <lateral_friction value="1.0"/>
      </contact>

      <inertial>
        <origin rpy="0 0 0" xyz="0 -0.01 0.02"/>
        <mass value="0.1"/>
        <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
      </inertial>
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://birmingham_cell_description/meshes/rightfinger.STL"/>
        </geometry>
        <material name="">
          <color rgba="1 1 1 1"/>
        </material>
      </visual>
      <!-- <collision> -->
      <collision concave="yes">
        <geometry>
          <mesh filename="package://birmingham_cell_description/meshes/rightfinger_collision.STL"/>
        </geometry>
      </collision>
    </link>
    <joint name="${ns}_finger_joint1" type="prismatic">
      <parent link="${ns}_hand"/>
      <child link="${ns}_leftfinger"/>
      <origin xyz="0 0 0.0584" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit effort="20" lower="-0.001" upper="0.04" velocity="0.3"/>
      <!-- <mimic joint="${ns}_left_joint_circle" multiplier="0.07" offset="0" /> -->
    </joint>
    <joint name="${ns}_finger_joint2" type="prismatic">
      <parent link="${ns}_hand"/>
      <child link="${ns}_rightfinger"/>
      <origin xyz="0 0 0.0584" rpy="0 0 0"/>
      <axis xyz="0 -1 0"/>
      <limit effort="20" lower="-0.001" upper="0.04" velocity="0.3"/>
      <mimic joint="${ns}_finger_joint1" multiplier="1" offset="0" />
    </joint>
    <link name="${ns}_grasptarget">
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0.0"/>
        <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
      </inertial>
    </link>
    <joint name="${ns}_grasptarget_hand" type="fixed">
      <parent link="${ns}_hand"/>
      <child link="${ns}_grasptarget"/>
      <origin rpy="0 0 0" xyz="0 0 0.105"/>
    </joint>

    <joint name="${ns}_left_joint_circle"
      type="revolute">
      <origin
        xyz="0.0 0.0 0.0"
        rpy="0 0.0 0" />
      <parent
        link="${ns}_hand" />
      <child
        link="${ns}_left_circle" />
      <axis
        xyz="-1 0 0" />
      <limit lower="0" upper="1" effort="10000" velocity="1000"/>
    </joint>
    <link name="${ns}_left_circle">
      <inertial>
        <origin
          xyz="0.0 -0.0 0.0"
          rpy="0 0 0" />
        <mass
          value="0.0001" />
        <inertia
          ixx="0.000001"
          ixy="0.0"
          ixz="0.0"
          iyy="0.000001"
          iyz="-0.0"
          izz="0.000001" />
      </inertial>
    </link>
    <joint name="${ns}_right_joint_circle"
      type="revolute">
      <origin
        xyz="0.0 0.0 0.0"
        rpy="0 0.0 0" />
      <parent
        link="${ns}_hand" />
      <child
        link="${ns}_right_circle" />
      <axis
        xyz="1 0 0" />
      <limit lower="0" upper="1" effort="10000" velocity="1000"/>
    </joint>
    <link name="${ns}_right_circle">
      <inertial>
        <origin
          xyz="0.0 -0.0 0.0"
          rpy="0 0 0" />
        <mass
          value="0.0001" />
        <inertia
          ixx="0.000001"
          ixy="0.0"
          ixz="0.0"
          iyy="0.000001"
          iyz="-0.0"
          izz="0.000001" />
      </inertial>
    </link>


    <joint name="${ns}_middle_left_joint_circle"
      type="prismatic">
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <parent
        link="${ns}_left_circle" />
      <child
        link="${ns}_middle_left_circle" />
      <axis
        xyz="0 0 1" />
      <limit lower="-1" upper="1" effort="10000" velocity="1000"/>
    </joint>
    <link name="${ns}_middle_left_circle">
      <inertial>
        <origin
          xyz="0.0 -0.0 0.0"
          rpy="0 0 0" />
        <mass
          value="0.0001" />
        <inertia
          ixx="0.000001"
          ixy="0.0"
          ixz="0.0"
          iyy="0.000001"
          iyz="-0.0"
          izz="0.000001" />
      </inertial>
    </link>
    <joint name="${ns}_end_left_joint_circle"
      type="revolute">
      <origin
        xyz="0.0 0.0 0.0"
        rpy="0 0 0" />
      <parent
        link="${ns}_middle_left_circle" />
      <child
        link="${ns}_end_left_circle" />
      <axis
        xyz="1 0 0" />
      <limit lower="-200" upper="200" effort="1000" velocity="1000"/>
    </joint>
    <link name="${ns}_end_left_circle">
      <inertial>
        <origin
          xyz="0.0 -0.0 0.0"
          rpy="0 0 0" />
        <mass
          value="0.0001" />
        <inertia
          ixx="0.000001"
          ixy="0.0"
          ixz="0.0"
          iyy="0.000001"
          iyz="-0.0"
          izz="0.000001" />
      </inertial>
      <!-- <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <box size="0.01 0.05 0.01"/>
      </geometry>
        <material
          name="">
          <color
            rgba="0.79216 0.81961 0.93333 1" />
        </material>
      </visual> -->
    </link>

    <joint name="${ns}_middle_right_joint_circle"
      type="prismatic">
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <parent
        link="${ns}_right_circle" />
      <child
        link="${ns}_middle_right_circle" />
      <axis
        xyz="0 0 1" />
      <limit lower="-1" upper="1" effort="10000" velocity="1000"/>
    </joint>
    <link name="${ns}_middle_right_circle">
      <inertial>
        <origin
          xyz="0.0 -0.0 0.0"
          rpy="0 0 0" />
        <mass
          value="0.0001" />
        <inertia
          ixx="0.000001"
          ixy="0.0"
          ixz="0.0"
          iyy="0.000001"
          iyz="-0.0"
          izz="0.000001" />
      </inertial>
    </link>
    <joint name="${ns}_end_right_joint_circle"
      type="revolute">
      <origin
        xyz="0.0 0.0 0.0"
        rpy="0 0 0" />
      <parent
        link="${ns}_middle_right_circle" />
      <child
        link="${ns}_end_right_circle" />
      <axis
        xyz="1 0 0" />
      <limit lower="-200" upper="200" effort="1000" velocity="1000"/>
    </joint>
    <link name="${ns}_end_right_circle">
      <inertial>
        <origin
          xyz="0.0 -0.0 0.0"
          rpy="0 0 0" />
        <mass
          value="0.0001" />
        <inertia
          ixx="0.000001"
          ixy="0.0"
          ixz="0.0"
          iyy="0.000001"
          iyz="-0.0"
          izz="0.000001" />
      </inertial>
      <!-- <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <box size="0.01 0.05 0.01"/>
      </geometry>
        <material
          name="">
          <color
            rgba="0.79216 0.81961 0.93333 1" />
        </material>
      </visual> -->
    </link>

  </xacro:macro>
</robot>
